package 解题方法;

public class Solution2 {
	public boolean isHappy(int n) {
		int slow = n;
		int fast = n;
		do {
			slow = bitSquareSum(slow);
			fast = bitSquareSum(fast);
			fast = bitSquareSum(fast);
		} while (slow != fast);
		
		return slow == 1;
	}
	
	int bitSquareSum(int n){
		int sum = 0;
		while(n != 0){
			sum += (n % 10) * (n % 10);
			n = n /10;
		}
		return sum;
	}
}
